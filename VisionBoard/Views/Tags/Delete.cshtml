@model VisionBoard.Models.Tag

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="row mt-2 p-4">
        <div class="col-md-12">
            <div class="row">
                <div class="col-sm-12">
                    <span class="label font-weight-bold">Tag : </span>
                    <span class="p-2 badge" style="background-color:@Model.Colour">@Model.Name </span>
                </div>
            </div>                        
            <div class="row mt-5">
                <div class="col-sm-12">
                    <a class="btn btn-danger" onclick="DeleteTag('@Url.Action("Delete", "Tags", new { id=@Model.Id, source=@ViewBag.Source})')">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>