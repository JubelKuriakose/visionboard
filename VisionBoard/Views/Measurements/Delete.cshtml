@model VisionBoard.Models.Measurement

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<h3>Are you sure you want to Remove Progress Tracking?</h3>
<div class="row p-4">
    <div class="col-md-12">
        <div class="row p-2 text-center">
            <div class="col-md-10">
                @{
                    string progress = (Math.Round((double)(100 * Model.CurrentValue) / Model.TotalValue)).ToString() + "%";
                    <div class="progress">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @progress" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                            @progress
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="row p-2 text-center">
            <div class="col-md-5">
                <span class="label font-weight-bold">Completed : </span>
                <span>@Model.CurrentValue.ToString()&nbsp;@(Model.Type=="By Steps"?"Steps": Model.Unit )</span>
            </div>
            <div class="col-md-5">
                <div class="float-right">
                    <span class="label font-weight-bold">Total : </span>
                    <span>@Model.TotalValue.ToString()&nbsp;@(Model.Type=="By Steps"?"Steps": Model.Unit )</span>
                </div>
            </div>
        </div>

    </div>
</div>
<div>
    <a class="btn btn-danger" onclick="DeleteMeasurement('@Url.Action("Delete", "Measurements", new { id=@Model.Id})')">Delete</a>
</div>
