@model IEnumerable<VisionBoard.Models.Goal>

@{
    ViewData["Title"] = "Index";
}

<h1>Vision Board</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <p>
                <a asp-action="Create">Create New</a>
            </p>
        </div>
        <div class="col-sm-6">
            <div class="form-group float-right box-shadow p-3">
                <label class="control-label" for="TagIds">Tags :</label>
                <select id="selectTagsIndex" name="TagIds"
                        asp-items="ViewBag.TagId" multiple="multiple" class="form-control"></select>
            </div>
        </div>
    </div>
</div>

<div id="list-goals" class="goals-list">
    @await Html.PartialAsync("IndexGoals", Model)
</div>

@section Scripts {
    <script>
        $('#selectTagsIndex').multiselect();
    </script>
}
