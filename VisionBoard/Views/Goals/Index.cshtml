@model IEnumerable<VisionBoard.Models.Goal>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndingOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Magnitude)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PictureUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reward)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tag)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndingOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Magnitude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PictureUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reward.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tag.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PictureUrl ?? "noimage.png");

        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <a asp-page="/Employees/Details" asp-route-ID="@employee.Id">
                <img class="card-img-top imageThumbnail" src="@photoPath"
                     asp-append-version="true" />
            </a>

            <div class="card-footer">
                <h6 class="card-subtitle mb-2 text-muted">Started On : @employee.StartOn</h6>
                <h6 class="card-subtitle mb-2 text-muted">Due On : @employee.StartOn</h6>
                <h5 class="card-subtitle mb-2 text-muted"> @employee.RewardId</h5>
                @*<a asp-page="/Employees/Details" asp-route-ID="@employee.Id"
                       class="btn btn-primary m-1">View</a>

                    <a asp-page="/Employees/Edit" asp-route-ID="@employee.Id"
                       class="btn btn-primary m-1">Edit</a>

                    <a asp-page="/Employees/Delete" asp-route-ID="@employee.Id"
                       class="btn btn-danger m-1">Delete</a>*@
            </div>
        </div>
    }
</div>
