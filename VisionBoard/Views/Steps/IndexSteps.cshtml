@model IEnumerable<VisionBoard.Models.Step>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goal)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("Create","Steps",new { goalId = ViewBag.goalId },Context.Request.Scheme)','Add Step')" class="btn btn-success text-white"> Add step</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.Label("DueDate", item.DueDate.Value.Date.ToShortDateString())
                </td>
                <td>
                    @Html.Label("Status", item.Status ? "Completed" : "Pending")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Goal.Name)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("Edit","Steps",new { id = @item.Id },Context.Request.Scheme)','Edit Step')"><i class="fa-solid fa-pen-to-square text-warning"></i></a>&nbsp;|&nbsp;
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-eye text-info"></i></a>&nbsp;|&nbsp;
                    <a onclick="showInPopup('@Url.Action("Delete","Steps", new { id = @item.Id }, Context.Request.Scheme)','Delete Step')"><i class="fa-solid fa-trash-can text-danger"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    if (Model.Count() == 0)
    {
        <div class="text-center pb-3">
            <p class="h6">No Steps Found!, To Add The Steps Required To Complete This Goal Click The Add Step Button.</p>
        </div>
    }
}
