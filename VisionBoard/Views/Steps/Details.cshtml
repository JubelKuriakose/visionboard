@model VisionBoard.Models.Step

@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<div>
    <div class="row mt-2 p-4">
        <div class="col-md-12">
            <div class="row">
                <div class="col-sm-12">
                    <span class="label font-weight-bold">Name : </span>
                    <span>@Model.Name </span>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-sm-12">
                    <span class="label font-weight-bold">Description : </span>
                    <span>@Model.Description </span>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-sm-6">
                    <span class="label font-weight-bold">Weight : </span>
                    <span>@Model.Weight </span>
                </div>
                <div class="col-sm-6">
                    <span class="label font-weight-bold">Due Date : </span>
                    <span>@Model.DueDate.Value.Date.ToString("dd/MM/yyyy") </span>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-sm-12">
                    <span class="label font-weight-bold">Status : </span>
                    <span>@(Model.Status==true?"Completed":"Pending") </span>
                </div>
            </div>
        </div>
    </div>
</div>
